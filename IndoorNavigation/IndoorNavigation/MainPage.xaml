<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IndoorNavigation"
             x:Class="IndoorNavigation.MainPage">

    <!--StackLayout>
    	<Label Text="Welcome to Xamarin.Forms!!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout-->
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.Platforms>
                <On Platform="iOS" Value="0, 25, 0, 0" />
                <On Platform="Android" Value="0, 0, 0, 0" />
                <On Platform="UWP" Value="0, 0, 0, 0" />
            </OnPlatform.Platforms>
        </OnPlatform>
    </ContentPage.Padding>
    
    <AbsoluteLayout>
        
        <ImageButton
            Source="setting_imagebutton.png"
            AbsoluteLayout.LayoutBounds="0.98, 0.01, 0.06, 0.06"
            AbsoluteLayout.LayoutFlags="All"
            Clicked="SettingImageButton_Clicked"
        />
        
        <Label
            AbsoluteLayout.LayoutBounds="0.5, 0.27, 0.6, 0.5"
            AbsoluteLayout.LayoutFlags="All">
            
            <!-- &#10; is breakline -->
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Welcome to&#10;" FontSize="40"
                          FontAttributes="Bold"/>
                    <Span Text="BeDIS&#10;" FontSize="43" TextColor="#009FCC"
                          FontAttributes="Bold" FontFamily=""/>
                    <Span Text="&#10;You won't get lost from now&#10;" 
                          FontSize="Medium" FontAttributes="Italic"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        
        <Button
            x:Name="NavigatorButton"
            Clicked="NavigatorButton_Clicked"
            Text="Navigator"
            FontSize="Large"
            CornerRadius="30"
            BorderColor="#49516F"
            TextColor="#ffffff"
            BackgroundColor="#009FCC"
            Image="navigation_button.png"
            ContentLayout="Left, 26"
            AbsoluteLayout.LayoutBounds="0.5, 0.47, 0.7, 0.1"
            AbsoluteLayout.LayoutFlags="All"
        />
        
        <Button
            x:Name="TrackingButton"
            Text="Tracking"
            FontSize="Large"
            CornerRadius="30"
            TextColor="#ffffff"
            BorderColor="#49516F"
            BackgroundColor="#009FCC"
            Image="tracking_button.png"
            ContentLayout="Left, 26"
            AbsoluteLayout.LayoutBounds="0.5, 0.7, 0.7, 0.1"
            AbsoluteLayout.LayoutFlags="All"
        />
        
        
    </AbsoluteLayout>

</ContentPage>
